@model IEnumerable<PizzeriaOnline.Models.ProductoExtra>
@{
	ViewData["Title"] = "Administración de Productos Extra";
}
<a asp-action="Index" asp-controller="Admin" class="btn btn-secondary mb-3">
	<i class="bi bi-arrow-left"></i> Regresar el Adminsitrador
</a>
<hr />

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Crear nuevo Producto</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Cantidad</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var productoextra in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => productoextra.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => productoextra.Precio)
				</td>
				<td>
					@Html.DisplayFor(modelItem => productoextra.CantidadEnStock)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@productoextra.Id" class="btn btn-warning btn-sm">Editar</a>
					<a asp-action="Delete" asp-route-id="@productoextra.Id" class="btn btn-danger btn-sm">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
