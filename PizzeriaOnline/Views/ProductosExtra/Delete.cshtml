@model PizzeriaOnline.Models.ProductoExtra

@{
	ViewData["Title"] = "Eliminar Producto";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que quieres eliminar este producto?</h3>
<div class="alert alert-danger">
	<strong>!Esta acción no se puede deshacer!</strong>
</div>

<div>
	<h4>Producto</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.Nombre)
		</dt>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.Precio)
		</dt>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.CantidadEnStock)
		</dt>
	</dl>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="Id" />

		<input type="submit" value="Sí, Eliminar" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
	</form>
</div>