@model PizzeriaOnline.Models.Ingrediente

@{
	ViewData["Title"] = "Eliminar Ingrediente";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que quieres eliminar este ingrediente?</h3>
<div class="alert alert-danger">
	<strong>!Esta acción no se puede deshacer!</strong>
</div>

<div>
	<h4>Ingrediente</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.Nombre)
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Nombre)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model => model.CantidadEnStock)
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.CantidadEnStock)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayFor(model => model.UnidadDeMedida)
		</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.UnidadDeMedida)
		</dd>
	</dl>

	<form asp-action="Delete" method="post">
		@* Este campo oculto es crucial para que el servidor sepa que ID borrar *@
		<input type="hidden" asp-for="Id" />

		<input type="submit" value="Sí, Eliminar" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
	</form>
</div>