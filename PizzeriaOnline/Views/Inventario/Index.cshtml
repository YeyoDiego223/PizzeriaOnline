@model IEnumerable<PizzeriaOnline.Models.Ingrediente>

@{
	ViewData["Title"] = "Gestión de Investionario";
}
<a asp-action="Index" asp-controller="Admin" class="btn btn-secondary mb-3">
	<i class="bi bi-arrow-left"></i> Regresar el Adminsitrador
</a>
<hr />
<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Añadir Nuevo Ingrediente</a>
</p>

<table class="table table-striped">
	<thead class="table-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				Cantidad en Stock
			</th>
			<th>
				Unidad
			</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var item in Model){
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CantidadEnStock)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnidadDeMedida)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
					<a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger btn-sm">Eliminar</a>
				</td>
			</tr>
}
	</tbody>
</table>