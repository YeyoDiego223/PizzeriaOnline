@model IEnumerable<PizzeriaOnline.Models.Tamaño>
@{
    ViewData["Title"] = "Gestionar Tamaños de Pizza";
}

<a asp-action="Index" asp-controller="Admin" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Regresar el Adminsitrador
</a>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Tamaño</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dimensiones</th>
            <th>Rebanadas</th>
            <th>Precio Base</th>
            <th>Máx. Sabores</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Dimensiones)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroRebanadas)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioBase)</td>
                <td>@Html.DisplayFor(modelItem => item.MaximoSabores)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>