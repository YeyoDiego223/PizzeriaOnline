@model PizzeriaOnline.Models.Configuracion
@{
	ViewData["Title"] = "Configuración de la Tienda";
}

<h1>@ViewData["Title"]</h1>
<p>Desde aquí puedes establecer los horarios de apertura y cerrar manualmente la tienda si es necesario y gestionar la promocion principal.</p>
<hr />

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PromocionRutaImagen" />

    <div class="row g-5">
        @* --- Columna para Horarios y Cierre --- *@
        <div class="col-md-6">
            <h4>Estado de la Tienda</h4>
            <div class="form-check form-switch mb-3 p-3 border rounded">
                <input class="form-check-input" type="checkbox" role="switch" asp-for="ForzarCierre" />
                <label class="form-check-label" asp-for="ForzarCierre"></label>
                <div class="form-text">Si marcas esta opción, la tienda aparecerá como "Cerrada" para los clientes, sin importar el horario.</div>
            </div>
            <div class="mb-3">
                <label asp-for="HoraApertura" class="form-label"></label>
                <input asp-for="HoraApertura" type="time" class="form-control" />
                <span asp-validation-for="HoraApertura" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HoraCierre" class="form-label"></label>
                <input asp-for="HoraCierre" type="time" class="form-control" />
                <span asp-validation-for="HoraCierre" class="text-danger"></span>
            </div>
        </div>

        @* --- Columna para la Promoción --- *@
        <div class="col-md-6">
            <h4>Promoción Principal</h4>
            <div class="form-check form-switch mb-3 p-3 border rounded">
                <input class="form-check-input" type="checkbox" role="switch" asp-for="PromocionEstaActiva" />
                <label class="form-check-label" asp-for="PromocionEstaActiva"></label>
            </div>
            <div class="mb-3">
                <label asp-for="PromocionTitulo" class="form-label"></label>
                <input asp-for="PromocionTitulo" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="PromocionDescripcion" class="form-label"></label>
                <textarea asp-for="PromocionDescripcion" class="form-control" rows="2"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="PromocionPrecio" class="form-label"></label>
                <input asp-for="PromocionPrecio" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Imagen de la Promoción</label>
                <input name="imagenPromocion" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.PromocionRutaImagen))
                {
                    <img src="@Model.PromocionRutaImagen" class="img-thumbnail mt-2" style="width:150px;" />
                }
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>