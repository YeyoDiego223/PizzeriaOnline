@model PizzeriaOnline.ViewModels.PizzaEditViewModel

@{
	ViewData["Title"] = "Editar Pizza";
}

<h1>@ViewData["Title"]</h1>
<h4>Pizza</h4>
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        @* --- Columna para el formulario --- *@
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImagenesNuevas" class="form-label"></label>
                <input asp-for="ImagenesNuevas" class="form-control" type="file" multiple />
                <span asp-validation-for="ImagenesNuevas" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>

        @* --- Columna para gestionar imágenes existentes --- *@
        <div class="col-md-6">
            <h5>Imágenes Actuales</h5>
            @if (Model.ImagenesExistentes != null && Model.ImagenesExistentes.Any())
            {
                <p class="small text-muted">Selecciona una imagen como la principal.</p>
                <div class="row row-cols-2 g-3">
                    @foreach (var imagen in Model.ImagenesExistentes)
                    {
                        <div class="col">
                            @* 1. Contenedor principal con nueva clase *@
                            <div class="image-edit-container">
                                <img src="@imagen.RutaImagen" class="img-thumbnail" alt="Imagen existente" />

                                @* 2. Checkbox para Eliminar con nueva clase *@
                                <div class="image-selector-delete">
                                    <input class="form-check-input" type="checkbox" name="ImagenesAEliminar" value="@imagen.Id" id="eliminar_@imagen.Id">
                                    <label class="form-check-label" for="eliminar_@imagen.Id">
                                        Eliminar
                                    </label>
                                </div>

                                @* 3. Radio Button para Principal con nueva clase y etiqueta *@
                                <div class="image-selector-primary">
                                    <input class="form-check-input" type="radio" asp-for="ImagenPrincipalId" value="@imagen.Id">
                                    <label class="form-check-label" for="ImagenPrincipalId">Principal</label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Esta pizza no tiene imágenes todavía.</p>
            }
        </div>
    </div>
</form>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}