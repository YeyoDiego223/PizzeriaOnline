@model PizzeriaOnline.ViewModels.AsignarIngredientesViewModel

@{
	ViewData["Title"] = "Asignar Ingredientes a " + Model.PizzaNombre;
}

<h1>@ViewData["Title"]</h1>
<hr />

<form method="post">
	<input type="hidden" asp-for="PizzaId" />
	<h4>Selecciona los ingredientes para la pizza:</h4>

	<div class="list-group">
		@for (int i = 0; i < Model.Ingredientes.Count; i++)
		{
			<label class="list-group-item">
				<input type="hidden" asp-for="Ingredientes[i].IngredienteId" />
				<input type="hidden" asp-for="Ingredientes[i].Nombre" />
				<input type="checkbox" asp-for="Ingredientes[i].Asignado" class="form-check-input me-1"/>
				@Model.Ingredientes[i].Nombre
			</label>
		}
	</div>

	<div class="mt-4">
		<button type="submit" class="btn btn-primary">Guardar Asignaciones</button>
		<a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
	</div>
</form>